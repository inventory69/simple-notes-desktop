{
  "name": "simple-notes-desktop",
  "private": true,
  "version": "0.3.1",
  "type": "module",
  "scripts": {
    "tauri": "tauri",
    "vite": "vite",
    "dev": "node scripts/dev.mjs",
    "dev:raw": "tauri dev",
    "build": "node scripts/build.mjs",
    "build:raw": "tauri build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "bump": "bash scripts/bump-version.sh",
    "update-aur-sha": "bash scripts/update-aur-sha.sh",
    "lint": "biome check src/ scripts/ index.html vite.config.js vitest.config.js",
    "lint:fix": "biome check --write --unsafe src/ scripts/ index.html vite.config.js vitest.config.js",
    "format": "biome format --write src/ scripts/ index.html vite.config.js vitest.config.js",
    "lint:rust": "cd src-tauri && cargo clippy --lib -- -D warnings",
    "format:rust": "cd src-tauri && cargo fmt",
    "format:rust:check": "cd src-tauri && cargo fmt -- --check",
    "quality": "pnpm lint && pnpm format:rust:check && pnpm lint:rust",
    "quality:fix": "pnpm lint:fix && pnpm format:rust"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@tauri-apps/cli": "^2",
    "@testing-library/dom": "^10.4.1",
    "jsdom": "^28.0.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.12",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-autostart": "^2.5.1",
    "@tauri-apps/plugin-opener": "^2",
    "codemirror": "^6.0.2",
    "dompurify": "^3.3.1",
    "marked": "^17.0.1"
  }
}
